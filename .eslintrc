{
    "parser": "babel-eslint",
    "rules": {
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": 1,
        "no-extra-boolean-cast": 0,
        "no-console": 0,
        "no-constant-condition": 0,
        "no-redeclare": 0,
        "prefer-const": 2,
        "arrow-parens": [2, "always"]
    },
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": "eslint:recommended"
}
